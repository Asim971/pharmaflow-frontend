{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 200
      }
    },
    {
      "files": "**/pharmaceutical/**/*.{ts,tsx}",
      "options": {
        "printWidth": 100,
        "singleQuote": true,
        "semi": true
      }
    },
    {
      "files": "**/dgda/**/*.{ts,tsx}",
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all"
      }
    }
  ]
}